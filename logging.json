{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "simple": {
      "format": "%(asctime)s - %(threadName)s - %(name)s - %(levelname)s - %(message)s"     
    },
    "colored":{
      "()": "colargulog.ColorizedArgsFormatter",
      "format": "%(asctime)s - %(name)-12s - %(levelname)s - %(message)s",
      "datefmt": "%H:%M:%S"
    },
    "file_format":{
      "()":"colargulog.BraceFormatStyleFormatter",
      "format": "%(asctime)s - %(name)-12s - %(levelname)s - %(message)s"
    }

  },

  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "INFO",
      "formatter": "colored",
      "stream": "ext://sys.stdout"
    },

    "info_file_handler": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "DEBUG",
      "formatter": "file_format",
      "filename": "{home}/testing/logs/info.log",
      "maxBytes": 50485760,
      "backupCount": 20,
      "encoding": "utf8"
    }
  },

  "loggers": {
    
  },

  "root": {
    "level": "DEBUG",
    "handlers": ["console", "info_file_handler"]
  }
}


